config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

bind r:ctrl;alt;cmd relaunch

bind up:ctrl;cmd nudge +0 -1%
bind down:ctrl;cmd nudge +0 +1%
bind left:ctrl;cmd nudge -1% +0
bind right:ctrl;cmd nudge +1% +0

# Aliases
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY

  bind space:ctrl;alt;cmd ${full}

alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY

    bind h:ctrl;cmd ${lefthalf}

alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY

    bind l:ctrl;cmd ${righthalf}


alias topcenter move screenOriginX+((screenSizeX-windowSizeX)/2);screenOriginY screenSizeX/1.25;screenSizeY/1.25

    bind j:ctrl;cmd ${topcenter}

alias center move screenOriginX+((screenSizeX-windowSizeX)/2);screenOriginY+((screenSizeY-windowSizeY)/2) screenSizeX/1.66;screenSizeY/1.25

    bind space:ctrl;cmd ${center}



# grid:

bind g:ctrl;cmd grid padding:4 0:8,8
